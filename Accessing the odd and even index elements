#include<stdio.h>
int main(){
    int n;
    printf("enter the no of element present in the array: ");
    scanf("%d",&n);
    int arr[n];
    for(int i = 0;i<n;i++){
        printf("enter the %d index elements: ",i);
        scanf("%d",&arr[i]);
    }
    for(int i = 0;i<n;i++){
        if(i % 2 != 0 ){
          arr[i]= arr[i]*2;
        }
        else{
            arr[i] = arr[i]+10;
        }
        
    }
    for(int i=0;i<n;i++){
        printf("%d ",arr[i]);
    }

}
