
#include <stdio.h>
int main(){   
    int n;
    printf("enter the no of elements present in the array: ");
    scanf("%d",&n);
    int arr[n];
    for(int i = 0;i<n;i++){
        printf("enter the %d  index elements: ",i);
        scanf("%d",&arr[i]);
    }
    int max = arr[0];
    for(int i=0;i<n;i++){
        if(arr[i] > max){
            max = arr[i];
        }
        
    }
    printf("The maximum number in the array is %d",max);    
}
